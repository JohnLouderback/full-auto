<?xml version="1.0" encoding="utf-8"?>

<Window
  x:Class="DownscalerV2.MainWindow"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:local="using:DownscalerV2"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  mc:Ignorable="d"
  x:Name="window"
  SizeChanged="window_SizeChanged">

  <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
    <Canvas x:Name="canvas" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
      <Button x:Name="debugButton" CornerRadius="22.5" Width="45" Height="45" Canvas.Left="5" Canvas.Top="5">
        <FontIcon Glyph="&#xEBE8;" />
      </Button>
      <TextBlock x:Name="fps" FontFamily="Courier New" Canvas.Left="5" Canvas.Top="0" Loaded="fps_Loaded"> fps! </TextBlock>

    </Canvas>
  </Grid>
</Window>
